<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bg_login"
    
    >
    
    
    
    <!-- type Label -->
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text= "@string/requestPurpose"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="17dip"/>
    
    
    <!-- Input type -->
    <EditText android:id="@+id/inputType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:singleLine="true"
        android:padding="10dp"
            
        android:background="@color/white"
        android:hint="@string/hint_reqtype"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
       
        />
    
    
    
     <!-- Blood Type Label -->
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/BloodType"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="17dip"/>
 
    <!-- Input blood type -->
    <EditText android:id="@+id/inputBlood"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:singleLine="true"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:background="@color/white"
        android:hint="@string/action_blood"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
       
        
        />

    
    <!-- Description Label -->
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Description"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="17dip"/>
 
    <!-- Input description -->
    <EditText android:id="@+id/inputDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:lines="6"
        android:gravity="top"
        android:padding="10dp"
        android:background="@color/white"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
       
        
        />
    
    <!-- Button Create request -->
    <Button android:id="@+id/btnCreateRequest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Request"/>
    
    
    
    
</LinearLayout>
